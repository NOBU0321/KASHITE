<div class="row">
  <div class="col-md-7 banner">
    <h1><span class="text-red">KASHITE</span> さあ！あなたの最高のコーデをシェアしよう。</h1>
  </div>
</div>

<%= form_tag search_path, method: :get do %>
  <div class="row">
    <div class="col-md-6">
      <%= text_field_tag :search, params[:search], placeholder: "コーデを検索", class: "form-control", id: "autolocation" %>
    </div>
  </div>
  <br/>
  <br/>

  <div class="row">
    <div class="col-md-offset-4 col-md-4">
      <%= submit_tag "検索", class: "btn btn-normal btn-block" %>
    </div>
  </div>
<% end %>

<br/><hr/><br/>

<div><h3>アイテム一覧</h3></div>
<br/>


<div class="row">
  <% @items.each do |item| %>
    <div class="col-md-4">
      <div class="panel panel-default">
        <div class="panel-heading preview">
          <%= image_tag item.cover_photo(:medium) %>
        </div>
        <div class="panel-body">
          <%= link_to item.listing_name, item %>
        </div>
      </div>
    </div>
  <% end %>
</div>