<div class="row">
  <div class="col-md-12">
    <%= image_tag @item.cover_photo(nil), width: "100%" %>
  </div>
</div>
<br/>

<div class="row">

</div>

  <div class="col-md-8">

    <div class="row">
      <div class="col-md-8">
        <h1><%= @item.listing_name %></h1>
        <%= @item.address %>
      </div>
      <div class="col-md-4 text-center">
        <br/><br/>
        <i class="fas fa-user fa-2x">
          <%= @item.user.fullname %>
        </i>
      </div>

    
    </div>
    <hr/>

    <!-- 部屋情報 -->
    <div class="row text-babu">
      <div class="row text-center row-space-1">
        <div class="col-md-2">
          <i class="fas fa-tshirt fa-2x"></i>
        </div>
        <div class="col-md-2">
          <i class="fas fa-street-view fa-2x"></i>
        </div>
        <div class="col-md-2">
          <i class="fas fa-male fa-2x"></i>
        </div>
        <div class="col-md-2">
          <i class="far fa-comment fa-2x"></i><br>
        </div>

        <div class="col-md-2">
          <i class="fa fa-truck fa-2x"></i><br>
        </div>
      </div>

      <div class="row text-center">
        <div class="col-md-2"><%= @item.item_type %></div>
        <div class="col-md-2"><%= @item.item_scene %></div>
        <div class="col-md-2"><%= @item.size %>サイズ</div>
        <div class="col-md-2"><%= @item.status %></div>
        <div class="col-md-2"><%= @item.delivery %></div>
      </div>
    
    </div>
    <hr/>

    <!-- 詳細説明 -->
    <div class="row">
      <div class="col-md-12">
      <h3>●このコーデについて</h3>
      <p><%= @item.summary %></p>
      </div>
    
    <!-- アクセサリー -->
    </div>
      <div class="col-md-3">
        <h4>アクセサリー</h4>
      </div>

      <div class="col-md-9">
        <div class="row">
          <div class="col-md-6">
            <ul class="accessories">
              <li class="<%= 'text-line-through' if !@item.is_belt %>">ベルト</li>
              <li class="<%= 'text-line-through' if !@item.is_shoes %>">靴</li>
            </ul>
          </div>
          <div class="col-md-6">
            <ul class="accessories">
              <li class="<%= 'text-line-through' if !@item.is_hat %>">帽子</li>
              <li class="<%= 'text-line-through' if !@item.is_watch %>">時計</li>
            </ul>
          </div>
        </div>
      </div>
    <hr/>
  
    <div class="row">
      <div id="carousel-example-generic" class="carousel slide" data-ride="carousel">
        <!-- Indicators -->
        <ol class="carousel-indicators">
          <% @photos.each do |photo| %>
          <li data-target="#carousel-example-generic" data-slide-to="<%= photo.id %>"></li>
          <% end %>
        </ol>

        <!-- Wrapper for slides -->
        <div class="carousel-inner" role="listbox">
          <% @photos.each do |photo| %>
            <div class="item <%= 'active' if photo.id == @photos[0].id %>">
              <%= image_tag photo.image.url(), width: "100%" %>
            </div>
          <% end %>
        </div>

        <!-- Controls -->
        <a class="left carousel-control" href="#carousel-example-generic" role="button" data-slide="prev">
          <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
          <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#carousel-example-generic" role="button" data-slide="next">
          <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
          <span class="sr-only">Next</span>
        </a>
        </div>
    
    </div>
    <hr/>
  </div>
  

  <div class="col-md-4">
    <%= render 'reservations/form' %>
  </div>
</div>


