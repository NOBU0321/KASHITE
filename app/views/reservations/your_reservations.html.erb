<div class="row">
  <div class="col-md-3">
    <ul class="side-bar-list">
      <li class="sidebar-item"><%= link_to "投稿一覧", items_path, class: "sidebar-link" %></li>
      <li class="sidebar-item"><%= link_to "シェア一覧", your_reservations_path, class: "sidebar-link active" %></li>
      <li class="sidebar-item"><%= link_to "あなたの予約コーデ", your_coordinations_path, class: "sidebar-link" %></li>
    </ul>
  </div> 
  <div class="col-md-9">
    <div class="panel panel-default">
      <div class="panel-heading">
        シェア状況一覧
      </div>
      <div class="panel-body">

        <% @items.each do |item| %>
          <% item.reservations.each do |reservation| %>
              <div class="row">
                <div class="col-md-2">
                  <%= reservation.start_date %>
                </div>
                <div class="col-md-2">
                  <%= link_to item_path(reservation.item) do %>
                    <%= image_tag reservation.item.cover_photo(:thumb) %>
                  <% end %>
                </div>
                <div class="col-md-8">
                  <%= link_to reservation.item.listing_name, item_path(reservation.item) %><br/><br/>
                  <span>
                    <%= link_to user_path(reservation.user) do %>
                      <%= reservation.user.fullname %>
                    <% end %>
                  </span>
                </div>
              </div>
              <hr/>

          <% end %>
        <% end %>
        
      </div>
    </div>
  </div>
</div>