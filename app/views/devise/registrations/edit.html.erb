<div class="row">
  <div class="col-md-2">
    <ul class="sidebar-list">
    <li class="sidebar-item"><%= link_to "プロフィール編集", edit_user_registration_path, class: "sidebar-link active" %></li>
    </ul>
    <br/>
    <%= link_to "プロフィールを見る", user_path(current_user.id), class: "btn btn-default" %>
  </div>

  <div class="col-md-7 text-center">
    <div class="panel panel-default">
      <div class="panel-heading">プロフィール</div>
      <div class="panel-body">
        <div class="container">
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
              <%= render 'shared/devisemes'%>
              <div class="form-group">
                <%= f.text_field :fullname, autofocus: true, placeholder: "フルネーム", class: "form-control" %>
              </div>

              <div class="form-group">
                <%= f.text_field :phone_number, autofocus: true, placeholder: "電話番号", class: "form-control" %>
              </div>

              <div class="form-group">
                <%= f.text_area :description, rows:5, cols: 25, autofocus: true, placeholder: "説明", class: "form-control" %>
              </div>

              <div class="form-group">
                <%= f.email_field :email, autofocus: true, placeholder: "Email", class: "form-control" %>
              </div>

              <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
                <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
              <% end %>

              <div class="form-group">
                <%= f.password_field :password, autocomplete: "off", placeholder: "新しいパスワード (変更しない場合は空白）", class: "form-control" %>
              </div>

              <div class="form-group">
                <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "パスワード（確認）", class: "form-control" %>
              </div>

              

              <div class="actions">
                <%= f.submit "Save", class: "btn btn-normal btn-block" %>　
              </div>
            <% end %>
            <%= link_to "Back", :back, class: "btn-outline-primary" %>
            </div>
          </div>
        </div>
      </div>
    </div>

<style type="text/css">
  body {
    background-image: url(https://cdn.pixabay.com/photo/2016/02/19/11/33/drawing-pad-1209779_1280.jpg);
    background-position: center center;
    background-repeat: no-repeat;
    background-size: cover;
    background-attachment: fixed;
  }

