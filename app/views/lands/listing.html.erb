<div class="row">
  <div class="col-md-3">
    <%= render 'land_menu' %>
  </div>
  <div class="col-md-9">
    <div class="panel panel-default">

      <div class="panel-heading">
        概要
      </div>

      <div class="panel-body">
        <div class="container">
          <%= form_with model: @land, local: true do |f| %>
            <div class="row">
              <div class="col-md-4 select">
                <div class="form-group">
                  <label>土地カテゴリー</label>
                  <%= f.select :land_type, [["田んぼ", "田んぼ"], ["畑", "畑"], ["山林", "山林"], ["その他", "その他"]], id: "land_type", prompt: "選択してください", class: "form-control" %>
                </div>
              </div>

              <div class="col-md-4 select">
                <div class="form-group">
                  <label>最適用途</label>
                  <%= f.select :purpose, [["農業", "農業"], ["レジャー", "レジャー"], ["資材置場", "資材置場"], ["多目的", "多目的"]], id: "purpose", prompt: "選択してください", class: "form-control" %>
                </div>
              </div>

              <div class="col-md-4 select">
                <div class="form-group">
                  <label>面積</label>
                  <%= f.text_field :size, placeholder: "例) 550,00㎡", id:"size", class:"form-control" %>
                </div>
              </div>

              <div class="col-md-4 select">
                <div class="form-group">
                  <label>水道</label>
                  <%= f.select :is_tap, [["有", "1"], ["無", "2"]], id: "is_tap", prompt: "選択してください", class: "form-control" %>
                </div>
              </div>

              <div class="col-md-4 select">
                <div class="form-group">
                  <label>電気</label>
                  <%= f.select :is_electronic, [["有", "1"], ["無", "2"]], id: "is_electronic", prompt: "選択してください", class: "form-control" %>
                </div>
              </div>

              <div class="col-md-4 select">
                <div class="form-group">
                  <label>ガス</label>
                  <%= f.select :is_gas, [["有", "1"], ["無", "2"]], id: "is_gas", prompt: "選択してください", class: "form-control" %>
                </div>
              </div>
            </div>

            <div><%= f.submit "保存", class: "btn btn-normal" %></div>
          <% end %>
        </div>
      </div>
      
    </div>
  </div>
</div>
