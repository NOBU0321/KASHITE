<div class="row">
  <div class="col-md-3">
    <%= render 'land_menu' %>
  </div>
  <div class="col-md-9">
    <div class="panel panel-default">

      <div class="panel-heading">
        説明
      </div>

      <div class="panel-body">
        <div class="container">
          <%= form_with model: @land do |f| %>

            <div class="row">
              <div class="form-group">
                <label>タイトル</label>
                <%= f.text_field :listing_name, placeholder: "タイトルを記入してください", class:"form-control" %>
              </div>
            </div>

            <div class="row">
              <div class="form-group">
                <label>内容</label>
                <%= f.text_area :summary, rows: 5, placeholder: "シェアしたい土地の詳細を記入してください", class:"form-control" %>
              </div>
            </div>

            <div class="text-center">
              <%= f.submit "保存", class: "btn btn-form" %>
            </div>

          <% end %>
        </div>
      </div>
      
    </div>
  </div>>
</div>