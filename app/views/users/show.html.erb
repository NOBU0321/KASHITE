<div class = "row">
  <div class="col-md-3">
    <div class="center">
      <li class="fas fa-user fa-10x"></li>
    </div>
    <div class="panel panel-default">
      <div class="panel-heading">プロフィール</div>
      <div class = "panel-body">
        <ul class="sidebar-list">
          <li>メールアドレス: <%= @user.email %><li>
          <li>電話番号： <%= @user.phone_number %></li>
        </ul>
      </div>
    </div>
  </div>

  <div class="col-md-9">
    <h2><%= @user.fullname %></h2>

    <div class="description row-space-3">
      <%= @user.description %>
    </div>

    <h4>投稿コーディネート一覧(<%= @items.length %>)</h4><br/>

    <div class="row">
      <% @items.each do |item| %>
        <div class="col-md-4">
          <div class="panel-heading preview">
            <%= image_tag item.cover_photo(:medium) %>
          </div>
          <div class="panel-body">
            <%= link_to item.listing_name, item %>
          </div>
        </div>
      <% end %>
    </div>

  </div>
</div>